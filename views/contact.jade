extends layout

block content
 h2.page-header Get In Touch
 form(method='post', action='/users/contact', enctype='multipart/form-data')
  .form-group
  label Name
  input.form-control(name='name', type='text', placeholder='Enter Name')
  .form-group
  label Email
  input.form-control(name='email', type='text', placeholder='Enter email')
  .form-group
  label Subject
  input.form-control(name='subject', type='text', placeholder='Enter subject')
  label Message
  textarea.form-control(name='message', type='text', rows='5' placeholder='Enter message')
 .form-group 
 input.btn.btn-primary(type='submit', name='submit', value='Send Message')