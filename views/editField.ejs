<body>
   <!-- linked internalHeader -->
  <div><% include ./partials/internalHeader %></div>
  <div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          <i class="fas fa-tractor"></i> Field
        </h1>
      <% include ./partials/messages %>
      <!-- for fetching field data's id and it will be used but remain hidden into the form -->
      <input type="hidden" name="_id" value="<%= field._id %>">
      <form action="/field/edit" method="POST">
        <!-- for field product id -->
        <div class="form-group">
          <label for="productID">Product ID</label>
            <input
              type="productID"
              id="productID"
              name="productID"
              class="form-control"
              placeholder="Enter Product ID"
              value="<%= field.productID %>"
              readonly />
        </div>
           <!-- for field product name -->
        <div class="form-group">
          <label for="productName">Product Name</label>
            <input
              type="productName"
              id="productName"
              name="productName"
              class="form-control"
              placeholder="Enter product name"
              value="<%= field.productName %>" 
              readonly />
        </div>
           <!-- for field location -->
        <div class="form-group">
          <label for="fieldLocation">Field Address</label>
            <input
              type="fieldLocation"
              id="fieldLocation"
              name="fieldLocation"
              class="form-control"
              placeholder="Enter field address"
              value="<%= field.fieldLocation %>" />
        </div>
             <!-- for field farmer name -->
        <div class="form-group">
          <label for="farmerName">Farmer Name</label>
            <input
              type="farmerName"
              id="farmerName"
              name="farmerName"
              class="form-control"
              placeholder="Enter farmer name"
              value="<%= field.farmerName %>"/>
        </div>
               <!-- for field farmer mobile -->
        <div class="form-group">
          <label for="farmerMobile">Farmer Mobile Number</label>
            <input
              type="farmerMobile"
              id="farmerMobile"
              name="farmerMobile"
              class="form-control"
              placeholder="Enter farmer mobile number"
              value="<%= field.farmerMobile %>" />
        </div>
                   <!-- for field farmer nid number -->
        <div class="form-group">
          <label for="farmerNid">Farmer NID Number</label>
            <input
              type="farmerNid"
              id="farmerNid"
              name="farmerNid"
              class="form-control"
              placeholder="Enter farmer nid number"
              value="<%= field.farmerNid %>" />
        </div>
        <!-- Button for upload field data -->
          <button type="submit" class="btn btn-primary btn-block">
              Edit Field Data
        </button>
      </form>
    </div>
  </div>
</div>
  <br>
  <br>
  <!-- linked footer -->
  <div class="container"><% include ./partials/footer %></div>
</body>
  