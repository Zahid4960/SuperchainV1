<!DOCTYPE html>
<html lang="en">
<head>
  <title></title>
  <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <link rel="stylesheet" href="https://bootswatch.com/4/journal/bootstrap.min.css"/>
    <link href="https://fonts.googleapis.com/css?family=ZCOOL+XiaoWei" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</head>
	<!-- linked internalHeader -->
	<div><% include ./partials/internalHeader %></div>
	<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          <i class="fas fa-tractor"></i> Field
        </h1>
      <% include ./partials/messages %>
      <form action="/field" method="POST">
        <!-- for field product id -->
        <div class="form-group">
          <label for="productID">Product ID</label>
            <input
              type="productID"
              id="productID"
              name="productID"
              class="form-control"
              placeholder="Enter Product ID"
              value="<%= typeof productID != 'undefined' ? productID : '' %>" />
        </div>
           <!-- for field product name -->
        <div class="form-group">
          <label for="productName">Product Name</label>
            <input
              type="productName"
              id="productName"
              name="productName"
              class="form-control"
              placeholder="Enter product name"
              value="<%= typeof productName != 'undefined' ? productName : '' %>" />
        </div>
           <!-- for field location -->
        <div class="form-group">
          <label for="fieldLocation">Field Address</label>
            <input
              type="fieldLocation"
              id="fieldLocation"
              name="fieldLocation"
              class="form-control"
              placeholder="Enter field address"
              value="<%= typeof fieldLocation != 'undefined' ? fieldLocation : '' %>" />
        </div>
             <!-- for field farmer name -->
        <div class="form-group">
          <label for="farmerName">Farmer Name</label>
            <input
              type="farmerName"
              id="farmerName"
              name="farmerName"
              class="form-control"
              placeholder="Enter farmer name"
              value="<%= typeof farmerName != 'undefined' ? farmerName : '' %>" />
        </div>
               <!-- for field farmer mobile -->
        <div class="form-group">
          <label for="farmerMobile">Farmer Mobile Number</label>
            <input
              type="farmerMobile"
              id="farmerMobile"
              name="farmerMobile"
              class="form-control"
              placeholder="Enter farmer mobile number"
              value="<%= typeof farmerMobile != 'undefined' ? farmerMobile : '' %>" />
        </div>
                   <!-- for field farmer nid number -->
        <div class="form-group">
          <label for="farmerNid">Farmer NID Number</label>
            <input
              type="farmerNid"
              id="farmerNid"
              name="farmerNid"
              class="form-control"
              placeholder="Enter farmer nid number"
              value="<%= typeof farmerNid != 'undefined' ? farmerNid : '' %>" />
        </div>
        <!-- Button for upload field data -->
          <button type="submit" class="btn btn-primary btn-block">
              Upload Field Data
        </button>
      </form>
    </div>
  </div>
</div>
	<br>
	<br>
	<!-- linked footer -->
	<div><% include ./partials/footer %></div>
</body>
</html>
