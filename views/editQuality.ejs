	<!-- linked internalHeader -->
	<div><% include ./partials/internalHeader %></div>
	<br>
	<br>
	<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          <i class="fas fa-thermometer-three-quarters"></i> Quality Control
        </h1>
      <% include ./partials/messages %>
       <!-- for fetching quality control data's id and it will be used but remain hidden into the form -->
      <input type="hidden" name="_id" value="<%= quality._id %>">
      <form action="/quality/edit" method="POST">
        <!-- for quality control product id -->
        <div class="form-group">
          <label for="productID">Product ID</label>
            <input
              type="productID"
              id="productID"
              name="productID"
              class="form-control"
              placeholder="Enter Product ID"
              value="<%= quality.productID %>" />
        </div>
           <!-- for quality control product name -->
        <div class="form-group">
          <label for="productName">Product Name</label>
            <input
              type="productName"
              id="productName"
              name="productName"
              class="form-control"
              placeholder="Enter product name"
              value="<%= quality.productName %>" />
        </div>
           <!-- for quality control tests -->
        <div class="form-group">
          <label for="qcTests">Quality Tests</label>
            <input
              type="qcTests"
              id="qcTests"
              name="qcTests"
              class="form-control"
              placeholder="Enter names of QC tests"
              value="<%= quality.qcTests %>" />
        </div>
          <!-- for quality control result selection -->
        <div class="form-group">
          <label for="qcResult">Quality Tests Result</label>
            <select name="qcResult" ,
              class="form-control",
              id="qcResult",
              type="qcResult">
                <option value="best">Best</option>
                <option value="good">Good</option>
                <option value="average">Average</option>
                <option value="belowAverage">Below Average</option>
                <option value="low">Low</option>
            </select>
          </div>
             <!-- for quality controller name -->
        <div class="form-group">
          <label for="qcName">Quality Controller Name</label>
            <input
              type="qcName"
              id="qcName"
              name="qcName"
              class="form-control"
              placeholder="Enter quality controller name"
              value="<%= quality.qcName %>" />
        </div>
               <!-- for quality controller nid number -->
        <div class="form-group">
          <label for="qcNidNumber">Quality controller Nid Number</label>
            <input
              type="qcNidNumber"
              id="qcNidNumber"
              name="qcNidNumber"
              class="form-control"
              placeholder="Enter quality controller nid number"
              value="<%= quality.qcNidNumber %>" />
        </div>
                   <!-- for quality controller contacts -->
        <div class="form-group">
          <label for="qcContact">Quality Controller Contacts</label>
            <input
              type="qcContact"
              id="qcContact"
              name="qcContact"
              class="form-control"
              placeholder="Enter quality controller contacts"
              value="<%= quality.qcContact %>" />
        </div>
        <!-- Button for upload field data -->
          <button type="submit" class="btn btn-primary btn-block">
              Edit Quality Control Data
        </button>
      </form>
    </div>
  </div>
</div>
<br>
<br>
