<!DOCTYPE html>
<html>
<head>
	<title></title>
	<meta charset="utf-8">
  	<meta name="viewport" content="width=device-width, initial-scale=1">
  	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
  	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  	<link href="https://fonts.googleapis.com/css?family=Raleway:400,500,500i,700,800i" rel="stylesheet">
</head>
<body>
	<!-- linked internalHeader -->
	<% if(user) {%>
	<div><% include ./partials/internalHeader %></div> 
	<% } %>
	<br>
	<!-- jumbotron of dashboard page  -->
	<div class="jumbotron">
  		<h1 class="display-4">Welcome <%= user.name %></h1>
  			<p class="lead">You're loggedin as <%= user.role %> manager and your email is <%= user.email %></p>
	</div>
	<% if(user.role == 'field') {%>
	 	<table class="table table-striped">
       		<thead>
       		   <tr>
      			 <th scope="col">Product ID</th>
      			 <th scope="col">Product Name</th>
                 <th scope="col">Field Location</th>
                 <th scope="col">Farmer Name</th>
                 <th scope="col">Farmer Mobile</th>
                 <th scope="col">Farmer NID</th>
                 <th scope="col">Date</th>
               </tr>
             </thead>
             	<% for(var i=0; i < field.length; i++) { %>
             	  <tr>
 					 <td><%= field[i].productID %></td>
  					 <td><%= field[i].productName %></td>
  					 <td><%= field[i].fieldLocation %></td>
  					 <td><%= field[i].farmerName %></td>
  					 <td><%= field[i].farmerMobile %></td>
  					 <td><%= field[i].farmerNid %></td>
  					 <td><%= field[i].date %></td>
  					 <td><button type="submit" class="btn btn-primary btn-block"> <i class="fa fa-edit"></i> </button></td>
  					 <td><button type="submit" class="btn btn-primary btn-block"> <i class="fa fa-trash"></i> </button></td>
    			  </tr>
    			 <% } %> 
       	 </table>
<% } %>

<% if(user.role == 'production') {%>
    <table class="table table-striped">
          <thead>
             <tr>
                <th scope="col">Product ID</th>
                <th scope="col">Product Name</th>
                <th scope="col">Company Name</th>
                <th scope="col">Company Address</th>
                <th scope="col">Facctory Address</th>
                <th scope="col">ISO Number</th>
                <th scope="col">Contacts</th>
                <th scope="col">Date</th>
               </tr>
             </thead>
              <% for(var i=0; i < production.length; i++) { %>
                <tr>
                  <td><%= production[i].productID %></td>
                  <td><%= production[i].productName %></td>
                  <td><%= production[i].companyName %></td>
                  <td><%= production[i].companyLocation %></td>
                  <td><%= production[i].factoryLocation %></td>
                  <td><%= production[i].CompanyIsoNumber %></td>
                  <td><%= production[i].CompanyContact %></td>
                  <td><%= production[i].date %></td>
                  <td><button type="submit" class="btn btn-primary btn-block"> <i class="fa fa-edit"></i> </button></td>
                  <td><button type="submit" class="btn btn-primary btn-block"> <i class="fa fa-trash"></i> </button></td>
            </tr>
           <% } %> 
         </table>
<% } %>

	
	<br>
	<br>
	<!-- linked footer -->
	<div><% include ./partials/footer %></div>
</body>
</html>











