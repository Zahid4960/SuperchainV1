<!--Style for card-->
<style type="text/css">
  .card:hover{
    box-shadow: -1px 9px 40px -12px rgba(0, 0, 0, 0.75);
}
</style>
<div>
      <h3 class="text-center">Quality Control Data</h3>
</div>
<div style="border-bottom: 3px solid red;"></div>
<% for(var i = 0; i < quality.length; i++) { %>
<div class="col-4-lg">
  <div class="card" style="width: 40rem; margin-left: 20%; margin-top: 2%;">
   <!-- for showing image (where product id == image name(product id) + .png)-->
  <img class="card-img-top"  src="http://localhost:5000/images/<%= quality[i].productID %>.jpg" style="height: 300px; width: 100%; border: 5px solid gray;">
  <div class="card-body">
    <p>
      <tr><h3 class="text-center"><%= quality[i].productID %></h3></tr>
      <tr><h3 class="text-center"><%= quality[i].productName %></h3></tr>
    </p>
    <div>
       <tr>Quality Control Tests: <%= quality[i].qcTests %></tr><br>
       <tr>Quality Test Result: <%= quality[i].qcResult %></tr><br>
       <tr>Quality Controller Name: <%= quality[i].qcName %></tr><br>
       <tr>Quality Controller Nid Number: <%= quality[i].qcNidNumber %></tr><br>
       <tr>Quality Controller Contact: <%= quality[i].qcContact %></tr><br>
       <tr>Date: <%= quality[i].date %></tr><br>
    </div>
    <div style="float: right; margin-top: 2%;">
       <!-- button for edit details for quality control data -->
      <a href="/quality/edit/<%= quality[i]._id%>"> <button type="submit" class="btn btn-primary"><i class="fa fa-edit">Edit </i></button></a>
      <!-- button for delete details for quality control data -->
      <a href="/quality/delete/<%=quality[i]._id%>" onclick="return confirm('Are you sure to delete this record ?')";><button type="submit" class="btn btn-primary"><i class="fa fa-trash">Delete</i></button></a>
    </div>
  </div>
</div>
<% } %>
