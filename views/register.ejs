  <!-- linked internalHeader -->
  <div><% include ./partials/internalHeader %></div>
  <div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          <i class="fas fa-user-plus"></i> Register
        </h1>
      <% include ./partials/messages %>
      <form action="/users/register" method="POST">
        <!-- for role selection -->
        <div class="form-group">
          <label for="role">Role</label>
            <select name="role" ,
              class="form-control",
              id="role",
              type="role">
                <option value="admin">Admin Manager</option>
                <option value="field">Field Manager</option>
                <option value="production">Production Manager</option>
                <option value="quality">Quality Control Manager</option>
                <option value="transport">Transport Manager</option>
            </select>
          </div>
        <!-- for name field -->
        <div class="form-group">
          <label for="name">Name</label>
            <input
              type="name"
              id="name"
              name="name"
              class="form-control"
              placeholder="Enter Name"
              value="<%= typeof name != 'undefined' ? name : '' %>"/>
        </div>
        <!-- for email field -->
        <div class="form-group">
          <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
              value="<%= typeof email != 'undefined' ? email : '' %>" />
        </div>
        <!-- for password field -->
        <div class="form-group">
          <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Create Password"
              value="<%= typeof password != 'undefined' ? password : '' %>"/>
        </div>
         <!-- for password2 field -->
        <div class="form-group">
          <label for="password2">Confirm Password</label>
            <input
              type="password"
              id="password2"
              name="password2"
              class="form-control"
              placeholder="Confirm Password"
              value="<%= typeof password2 != 'undefined' ? password2 : '' %>"/>
        </div>
        <!-- Button for register -->
          <button type="submit" class="btn btn-primary btn-block">
              Register
        </button>
      </form>
    </div>
  </div>
</div>
  <br>
  <br>
  <!-- linked footer -->
  <div class="container"><% include ./partials/footer %></div>











