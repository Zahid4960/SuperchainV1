<!--Style for card-->
<style type="text/css">
  .card:hover{
    box-shadow: -1px 9px 40px -12px rgba(0, 0, 0, 0.75);
}
</style>
<div>
      <h3 class="text-center">Transport Data</h3>
</div>
<div style="border-bottom: 3px solid red;"></div>
<% for(var i = 0; i < transport.length; i++) { %>
<div class="col-4-lg">
  <div class="card" style="width: 40rem; margin-left: 20%; margin-top: 2%;">
  <img class="card-img-top" src="http://localhost:5000/images/mango.jpg" alt="Card image cap">
  <div class="card-body">
    <p>
      <tr><h3 class="text-center"><%= transport[i].productID %></h3></tr>
      <tr><h3 class="text-center"><%= transport[i].productName %></h3></tr>
    </p>
    <div>
       <tr>Transpotation Company Name: <%= transport[i].companyName  %></tr><br>
       <tr>Transpotation Company Address: <%= transport[i].companyLocation %></tr><br>
       <tr>Transpotation Company Contact: <%= transport[i].companyContact %></tr><br>
       <tr>Veheicle Number: <%= transport[i].veheicleNumber %></tr><br>
       <tr>Driver Name: <%= transport[i].driverName %></tr><br>
       <tr>Driver Nid Number: <%= transport[i].driverNidNumber %></tr><br>
       <tr>Driver Mobile Number: <%= transport[i].driverMobile %></tr><br>
       <tr>Date: <%= transport[i].date %></tr><br>
    </div>
    <div style="float: right; margin-top: 2%;">
      <button type="submit" class="btn btn-primary">Edit </button>
      <button type="submit" class="btn btn-primary">Delete </button>
    </div>
  </div>
</div>
<% } %>
